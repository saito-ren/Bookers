<div class="bookers">
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

 <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
    
        <td class="link"><%= link_to 'Show', book_path(book.id) %></td>
        <td class="link"><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td class="link"><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></td>
    
      </tr>
    <% end %>
  </tbody>
</table>

<div class="new-form">
<h3 class="form-title">New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<div class="field">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>
   </div>
<div class="field">
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %>
</div>


<%= f.submit 'Create Book' %>

<% end %>
</div>
</div>