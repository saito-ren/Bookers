<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
    <div id="error_explanation" class="alart alart_danger">
    	<ul>
    		<% @book.errors.full_messages.each do |message| %>
    		<li><%= message %></li>
    		<% end %>
    	</ul>
    </div>
  <% end %>
  
	<h4>Title</h4>
	<%= f.text_field :title %>
	<h4>Body</h4>
	<%= f.text_area :body %>
	<%= f.submit "Update Book" %>


	<%= link_to "Show", book_path(@book.id) %>
	<%= link_to "Back", books_path %>
<% end %>